    "components": {
        "schemas": {
            "TMDBMovie": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 550
                    },
                    "title": {
                        "type": "string",
                        "example": "Fight Club"
                    },
                    "poster_path": {
                        "type": "string",
                        "example": "/a26cQPRhJPX6GbWfQbvZdrrp9j9.jpg"
                    },
                    "genres": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "example": [
                            18,
                            28
                        ]
                    },
                    "overview": {
                        "type": "string",
                        "example": "Um homem insatisfeito com sua vida conhece Tyler..."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "example": "1999-10-15"
                    },
                    "vote_average": {
                        "type": "number",
                        "format": "float",
                        "example": 8.4
                    }
                },
                "type": "object"
            },
            "MovieFavorite": {
                "properties": {
                    "tmdb_id": {
                        "type": "integer",
                        "example": 550
                    },
