                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "novo@email.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Auth"
                ],
                "summary": "Excluir conta do usuário autenticado",
                "operationId": "814a7078133c836f377c3a981f3d70c1",
                "responses": {
                    "200": {
                        "description": "Conta excluída com sucesso"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
